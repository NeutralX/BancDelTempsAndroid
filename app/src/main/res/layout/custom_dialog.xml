<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical" >

	<TextView
			android:id="@+id/tvPropostaDescripcio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:text="Descripcio"
			android:textSize="15dp"
			android:textStyle="bold"/>


	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Name"
			android:ems="10"
			android:id="@+id/editTextPropostaDescription" android:inputType="textImeMultiLine" />

	<TextView
			android:id="@+id/tvPropostaHours"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:text="Descripcio"
			android:textSize="15dp"
			android:textStyle="bold"/>

	<Spinner
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/spinnerPropostaHours" />


</LinearLayout>