<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="10dp"
                                    android:id="@+id/cardViewIdPacts"
                                    android:stateListAnimator="@animator/cardview_anim"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center">

        <TextView
                android:id="@+id/titlePacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textStyle="bold" android:layout_alignParentTop="true"
                android:text="Title" android:layout_centerHorizontal="true"/>
        <TextView
                android:id="@+id/datePacts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#fff0"
                android:textStyle="bold" android:layout_alignParentTop="true"
                android:textSize="10dp"
                android:text="01/01/2019" android:layout_alignParentEnd="true"/>
        <ImageView
                android:id="@+id/imageCategoryPacts"
                android:layout_width="30dp"
                android:layout_height="27dp"
                android:contentDescription="@null"
                android:layout_alignParentStart="true" android:layout_centerVertical="true"
                android:layout_marginStart="19dp" app:srcCompat="@drawable/categoria_informatica"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>